{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/hoai.c",
                "${workspaceFolder}/hoai_lib.c",
                "-lm",
                "-o",
                "${workspaceFolder}/hoai_app",
                "-Wall", "-Wextra", "-std=c99"
